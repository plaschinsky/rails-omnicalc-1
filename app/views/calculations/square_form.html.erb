<% if @squared.present? %>
  <h1>Square Results</h1>
  Number: <%= @number %><br>
  Square: <%= @squared %><br>
  <a href="/square/new">Try another</a>
<% else %>
  <form action="/square/results" method="get">
    <label>Enter a number:</label>
    <input name="sq_new_number" type="text">
    <button>Calculate square</button>
  </form>
<% end %>
